[default]

name = "Savvy"
version = "2013/07/28"
languages = "en,de"
log = "null"
authentication = "database"
timezone = "Europe/Berlin"

[session]

timeout = 900

[database]

driver = "mysqli"
host = "localhost"
dbname = "savvy-test"
user = "savvy-test"
password = "savvy-test"

[doctrine]

auto_generate_schema = 1
auto_generate_proxy_classes = 1

[cache]

;driver = "memcache"
;host = "localhost"
;port = 11211

[extjs]

cdn = "http://cdn.sencha.com/ext/gpl/4.2.1/ext-all.js"

[runner]

gui = "Savvy\Runner\GUI\Runner"
rest = "Savvy\Runner\REST\Runner"
daemon = "Savvy\Runner\Daemon\Runner"
savvy = "Savvy\Runner\Console\Savvy\Runner"
doctrine = "Savvy\Runner\Console\Doctrine\Runner"

[daemon]

heartbeat = 120
pipe = "tmp/daemon.fifo"
pid = "tmp/daemon.pid"
log = "null"

[utility]

isoquery = "isoquery"
