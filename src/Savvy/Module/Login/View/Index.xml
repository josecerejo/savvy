<?xml version="1.0"?>
<window width="250" resizable="horizontal" title="INDEX\TITLE" id="loginWindow">
    <layout type="vbox" align="stretch" />

    <item type="form" name="login" layout="inherit">
        <item type="text" name="username" label="INDEX\USERNAME" labelAlign="top" padding="10 15 0 15" focus="true" />
        <item type="password" name="password" label="INDEX\PASSWORD" labelAlign="top" padding="0 15 10 15" encrypt="true" />

        <button text="INDEX\BUTTON" action="validate" message="INDEX\VERIFYING_ACCESS" />
    </item>
</window>
